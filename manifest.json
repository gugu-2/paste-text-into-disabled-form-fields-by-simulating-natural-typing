{
  "manifest_version": 3,
  "name": "Smart Typing Paste",
  "version": "1.0",
  "description": "Paste text into disabled form fields with natural typing simulation",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart Typing Paste"
  }
}